{
  "name": "@shorty/mono",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "docker:build": "docker build -f apps/bot/dockerfile -t shortybot .",
    "docker:run": "docker run --env-file apps/bot/.env shortybot",
    "start": "turbo run start --filter=@shorty/bot",
    "start:bot": "turbo run start --filter=@shorty/bot",
    "test": "turbo run test",
    "test:bot": "turbo run test --filter=@shorty/bot",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "docker:compose:up": "docker-compose -f docker-compose.yml up",
    "docker:compose:down": "docker-compose -f docker-compose.yml down"
  },
  "devDependencies": {
    "turbo": "^1.10.0"
  },
  "packageManager": "pnpm@10.13.1"
}
